#!/bin/bash

{{- $install := promptBool "do you want to install development tools? (y/n)" }}
{{- $manjaro := eq .chezmoi.osRelease.id "manjaro" }}

{{- if $install }}

  {{- if $manjaro }}
    echo "installing tools for manjaro linux, may require password and confirmation"

    sudo pacman -Syu neofetch \
    tldr \
    neovim

    git clone --depth 1 https://github.com/wbthomason/packer.nvim\
     ~/.local/share/nvim/site/pack/packer/start/packer.nvim
  {{- end }}

{{- else }}

  echo "skipped dev tool installation..."

{{- end }}
